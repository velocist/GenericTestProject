    </None>
    <None Update="Logger\Settings\log4netWithAll.config">
      <CopyToOutputDirectory>Always</CopyToOutputDirectory>
    </None>
    <None Update="Logger\Settings\log4netWithConsoleAppender-Debug.config">
      <CopyToOutputDirectory>Always</CopyToOutputDirectory>
    </None>
